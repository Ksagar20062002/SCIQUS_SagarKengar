<!-- Editstu.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Student</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .edit-container {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
        }

        h1 {
            color: #333;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        label {
            margin-bottom: 10px;
        }

        input,
        select {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button {
            background-color: #3498db;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #2980b9;
        }
    </style>
</head>

<body>
    <div class="edit-container">
        <h1>Edit Student Carefully</h1>

        <form action="/student/<%= Editstu._id %>/<%= idA %>/update?_method=PATCH" method="POST">
            <label for="studentEmail">Email:</label>
            <input type="email" id="studentEmail1" name="studentEmail1" value="<%= Editstu.studentEmail %>" required>

            <label for="studentUsername">Username:</label>
            <input type="text" id="studentUsername1" name="studentUsername1" value="<%= Editstu.studentUsername %>"
                required>

            <label for="studentPassword">Password:</label>
            <input type="password" id="studentPassword1" name="studentPassword1" value="<%= Editstu.studentPassword %>"
                required>

            <label for="studentDOB">Date of Birth:</label>
            <input type="date" id="studentDOB1" name="studentDOB1"
                value="<%= Editstu.studentDOB.toISOString().split('T')[0] %>" required>

            <label for="studentGender">Gender:</label>
            <select id="studentGender1" name="studentGender1" required>
                <option value="male" <%=Editstu.studentGender==='male' ? 'selected' : '' %>>Male</option>
                <option value="female" <%=Editstu.studentGender==='female' ? 'selected' : '' %>>Female</option>
                <option value="other" <%=Editstu.studentGender==='other' ? 'selected' : '' %>>Other</option>
            </select>

            <button type="submit">Update</button>
        </form>
    </div>
</body>

</html>